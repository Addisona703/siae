        "url": {
          "raw": "{{baseUrl}}/logs/login/fail",
          "host": ["{{baseUrl}}"],
          "path": ["logs", "login", "fail"]
        }
      }
    },
    {
      "name": "17. 未认证访问测试",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/test/siae-authorize/auth-log-query",
          "host": ["{{baseUrl}}"],
          "path": ["test", "siae-authorize", "auth-log-query"]
        }
      }
    }
  ]
}
